<?xml version="1.0" encoding="UTF-8"?>
<game
    id="DoubleUp"
    class="com.turpgames.doubleup.view.DoubleUpGame" >

    <params>

        <param
            key="debug"
            value="false" />

        <param
            key="server"
            value="test" />

        <param
            key="enable-analytics"
            value="true" />

        <param
            key="enable-ads"
            value="true" />

        <param
            key="provider"
            value="com.turpgames.framework.v0.impl.libgdx.GdxGameProvider" />

        <param
            key="settings-key"
            value="com.turpgames.doubleup" />

        <param
            key="virtual-width"
            value="550" />

        <param
            key="virtual-height"
            value="800" />

        <param
            key="default-font"
            value="Akachen,1" />

        <param
            key="disable-vibration"
            value="true" />

        <param
            key="default-screen"
            value="splash" />

        <param
            key="default-skin"
            value="doubleup" />

        <param
            key="screen-switcher"
            value="fading,0.30" />

        <param
            key="form-switcher"
            value="fading,0.30" />

        <param
            key="allow-exit-on-back"
            value="true" />

        <param
            key="fb-share-title"
            value="Double Up" />

        <param
            key="fb-share-subtitle"
            value="Turp Games" />

        <param
            key="fb-share-href"
            value="http://www.turpgames.com/doubleupredirect.html" />

        <param
            key="fb-share-imgurl"
            value="http://www.turpgames.com/res/img/doubleup_logo.png" />

        <param
            key="fb-share-appinfo"
            value="Play fun games with Turp Games!" />

        <param
            key="prod-server"
            value="http://prod.turpgam.es/" />

        <param
            key="test-server"
            value="http://test.turpgam.es/" />

        <param
            key="local-server"
            value="http://192.168.2.4:8080/turp-server/" />

        <param
            key="turp-address"
            value="http://www.turpgames.com" />

        <param
            key="play-store-address"
            value="market://details?id=com.turpgames.doubleup" />

        <param
            key="app-store-address-ios7"
            value="itms-apps://itunes.apple.com/app/id850225350" />

        <param
            key="app-store-address-old"
            value="itms-apps://itunes.apple.com/WebObjects/MZStore.woa/wa/viewContentsUserReviews?type=Purple+Software&amp;id=850225350" />

        <param
            key="twitter-address"
            value="http://www.twitter.com/turpgames" />

        <param
            key="facebook-address"
            value="http://www.facebook.com/turpgames" />

        <param
            key="admob-interstitial-ad-unit-id"
            value="ca-app-pub-9430411208134016/3931947478" />
    </params>

    <screens>

        <screen
            id="splash"
            class="com.turpgames.doubleup.view.SplashScreen" />

        <screen
            id="menu"
            class="com.turpgames.doubleup.view.MenuScreen" />

        <screen
            id="game4x4"
            class="com.turpgames.doubleup.view.Game4x4Screen" />

        <screen
            id="game5x5"
            class="com.turpgames.doubleup.view.Game5x5Screen" />

        <screen
            id="achievements"
            class="com.turpgames.doubleup.view.AchievementsScreen" />

        <screen
            id="leadersboard"
            class="com.turpgames.doubleup.view.LeadersBoardScreen" />

        <screen
            id="about"
            class="com.turpgames.doubleup.view.AboutScreen" />
    </screens>

    <forms>

        <form id="mainMenu" >

            <button
                id="btn4x4"
                action="screen=game4x4"
                text="Play 4x4"
                y="21" />

            <button
                id="btn4x4"
                action="screen=game5x5"
                resource-text="Play 5x5"
                y="17" />

            <button
                id="btnAchievements"
                action="screen=achievements"
                resource-text="Achievements"
                y="11" />

            <button
                id="btnLeadersBoard"
                action="screen=leadersboard"
                resource-text="Leaders Board"
                y="7" />

            <button
                id="btnAbout"
                action="screen=about"
                resource-text="About"
                y="3" />
        </form>
    </forms>

    <animations>

        <animation
            id="loading"
            frame-duration="0.040"
            frame-height="74"
            frame-width="74"
            loop="true"
            texture="loading" />
    </animations>

    <resources>

        <fonts>

            <font
                id="Akachen"
                path="fonts/akachen_1024.fnt" />
        </fonts>

        <textures>

            <texture
                id="turp_logo"
                path="img/turpgames_logo.png"
                resource-load="primary" />

            <texture
                id="loading"
                path="img/loading.png" />

            <texture
                id="facebook"
                path="img/facebook.png" />

            <texture
                id="reset"
                path="img/reset.png" />

            <texture
                id="tile"
                path="img/tile.png" />

            <texture
                id="fw_close"
                path="img/framework/close.png" />

            <texture
                id="tb_back"
                path="img/toolbar/back.png" />

            <texture
                id="tb_sound_off"
                path="img/toolbar/sound-off.png" />

            <texture
                id="tb_sound_on"
                path="img/toolbar/sound-on.png" />

            <texture
                id="overlay"
                path="img/overlay.png" />

            <texture
                id="main"
                path="img/textures.png" />

            <texture
                id="icon"
                height="320"
                region-of="main"
                width="320"
                x="2"
                y="114" />

            <texture
                id="logo"
                height="110"
                region-of="main"
                width="500"
                x="2"
                y="2" />
        </textures>

        <sounds>

            <sound
                id="1"
                path="audio/1.mp3" />

            <sound
                id="2"
                path="audio/2.mp3" />

            <sound
                id="4"
                path="audio/4.mp3" />

            <sound
                id="8"
                path="audio/8.mp3" />

            <sound
                id="16"
                path="audio/16.mp3" />

            <sound
                id="32"
                path="audio/32.mp3" />

            <sound
                id="64"
                path="audio/64.mp3" />

            <sound
                id="128"
                path="audio/128.mp3" />

            <sound
                id="256"
                path="audio/256.mp3" />

            <sound
                id="512"
                path="audio/512.mp3" />

            <sound
                id="1024"
                path="audio/1024.mp3" />

            <sound
                id="2048"
                path="audio/2048.mp3" />

            <sound
                id="nomove"
                path="audio/nomove.mp3" />

            <sound
                id="noscore"
                path="audio/noscore.mp3" />

            <sound
                id="gameover"
                path="audio/gameover.mp3" />
        </sounds>

        <musics>
        </musics>
    </resources>

    <languages>

        <language
            id="en-US"
            encoding="UTF8"
            flag-texture-id="flag_en_us"
            path="lang/Strings_en_US.properties" />
    </languages>

    <skins>

        <skin id="doubleup" >

            <form
                cols="16"
                rows="32" />

            <button
                cols="8"
                default-color="#ffffffff"
                focus-color="#f9b000ff"
                font-scale="1.2"
                halign="center"
                rows="2"
                sound-click="8"
                vibrate="0"
                x="4" />

            <label
                halign="center"
                rows="2"
                color="#fff" />
        </skin>
    </skins>

</game>